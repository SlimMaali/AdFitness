<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.as.AdFitness.fragments.FoodExploreFragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cardview_shadow_start_color"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <TextView
                android:layout_marginTop="30dp"
                android:id="@+id/roomDescription"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/seek_orange"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:text="Room Description"/>

            <ImageView
                android:id="@+id/exploreImages"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@+id/roomDescription"
                android:contentDescription="TODO" android:scaleType="centerCrop"
                android:src="@drawable/recipe_3"/>
        </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
